<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background2"
    >


    <ImageButton
        android:id="@+id/imagebuttonprev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:background="@null"
        app:srcCompat="@drawable/pver" />

    <ImageButton
        android:background="@null"
        android:id="@+id/imageButtonplay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/play"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imagebuttonprev"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        />

    <ImageButton
        android:id="@+id/imageButtonstop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/stop"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButtonplay"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:background="@null"
        />

    <ImageButton
        android:id="@+id/imageButtonnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButtonstop"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:background="@null"
        />



    <TextView
        android:id="@+id/textTenBaiHat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Tên Bài Hát:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonstop"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp" />
    <TextView
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="20sp"
        android:layout_above="@+id/seekBar"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/sumtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="20sp"
        android:layout_above="@+id/seekBar"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_below="@+id/textTenBaiHat"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="57dp"
        android:background="@null"
        app:srcCompat="@drawable/cd_play" />


</RelativeLayout>